extends ../layout

block content	
	h1 Usuários
	a(href="/usuarios/create", class="btn btn-success") Cadastrar
	if messages.info
		br
		br
		div(class="alert alert-success")
			p #{messages.info}
	if messages.erro
		br
		br
		div(class="alert alert-danger")
			p #{messages.erro}
	br
	if lista.length > 0
		table(class="table")
			thead
				tr
					th ID:
					th Nome:
					th E-mail:
					th Data:
					th Ações:
			tbody
				each valor in lista
					tr
						td #{valor._id}
						td #{valor.nome}
						td #{valor.email}
						td #{moment(valor.data_cad).format('DD/MM/YYYY')}
						td
							a(href="/usuarios/edit/#{valor._id}", title="Editar", class="btn btn-info")
								span(class="glyphicon glyphicon-pencil")
							span &nbsp;
							a(href="/usuarios/show/#{valor._id}", title="Editar", class="btn btn-primary")
								span(class="glyphicon glyphicon-search")
	else
		p Nenhum registro encontrado!